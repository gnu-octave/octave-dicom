syntax: regexp
# The recurrent (^|/) idiom in the regexps below should be understood
# to mean "at any directory" while the ^ idiom means "from the
# project's top-level directory".

(^|/).*\.dvi$
(^|/).*\.pdf$
(^|/).*\.o$
(^|/).*\.oct$
(^|/).*\.octlink$
(^|/)octave-core$
(^|/).*\.tar\.gz$

## Our Makefile target
^target/

## Files generated automatically by autoconf and the configure script
(^|/)aclocal\.m4$
(^|/)configure$
(^|/)autom4te\.cache($|/)
(^|/)config\.log$
(^|/)config\.status$
(^|/)src/Makefile

## Generated from config.h.in by configure
(^|/)src/config\.h$

## generated by autoconf via CMAKE_FIND_PACKAGE macro
(^|/)src/CMakeFiles

# e.g. doc/faq/OctaveFAQ.info
#      doc/interpreter/octave.info-4
^doc/.*\.info(-\d)?$

^doc/\w*/stamp-vti$
^doc/\w*/version\.texi$

# Emacs tools create these
(^|/)TAGS$
(^|/)semantic.cache$

# Other text editors often create these
(^|/)~.*
